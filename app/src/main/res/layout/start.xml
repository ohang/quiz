<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.goro.quiztest.TestActivity">


    <Button
        android:id="@+id/backstart"
        android:layout_width="40dp"
        android:layout_margin="4dp"
        android:background="@mipmap/icon_back"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />



    <TextView
        android:textColor="#ffff"
        android:textSize="30sp"
        android:id="@+id/textView2"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

         />


    <Button
        android:id="@+id/updatequestion"
        android:layout_width="40dp"
        android:background="@mipmap/up1"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_alignBottom="@+id/backstart" />



    <RelativeLayout
    android:elevation="20dp"
    android:background="#ffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="47dp"
    android:layout_marginBottom="47dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:id="@+id/relativeLayout"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp">

        <TextView
            android:alpha="0"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:background="#4c0d0c0c"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/relativeLayout2"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <TextView
            android:textColor="#fff"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    </RelativeLayout>





        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="#fff"
            android:background="@drawable/selec"
            android:textAllCaps="false"
            android:id="@id/button1"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@id/button2"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/selec"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="@drawable/selec"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:layout_alignTop="@+id/button3"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2" />

        <Button
            android:textColor="#fff"
            android:background="@drawable/selec"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:id="@id/button3"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/button1"
            android:layout_alignLeft="@+id/button1"
            android:layout_alignStart="@+id/button1" />
    </RelativeLayout>


</RelativeLayout>


</RelativeLayout>
